<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_back"
                app:tint="@color/darkGray" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:letterSpacing="0.1"
                android:text="Cart Page"
                android:textColor="@color/widget_text_color"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            tools:context=".activities.SplashActivity">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver to"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color"
                android:layout_marginVertical="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Your full name"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/widget_text_color"
                android:background="@drawable/shape_edit_text_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Delivery Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g. 123 Main Street Sydney"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/widget_text_color"
                android:background="@drawable/shape_edit_text_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mobile Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="e.g. 0401 234 567"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:inputType="phone"
                android:textColor="@color/widget_text_color"
                android:background="@drawable/shape_edit_text_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply voucher code or gift card"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/widget_text_color"
                    android:background="@drawable/shape_edit_text_background"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/button_background_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingHorizontal="20dp"
                        android:text="APPLY"
                        android:textSize="18sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </LinearLayout>

            <com.airrobe.widgetsdk.airrobewidget.widgets.AirRobeMultiOptIn
                android:id="@+id/multi_opt_in_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/widget_text_color"
                android:padding="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Order Summary"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3 items"
                        android:textSize="14sp"
                        android:textColor="@color/lightGray"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$219.95"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:textSize="14sp"
                        android:textColor="@color/lightGray"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$15.00"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery to"
                        android:textSize="14sp"
                        android:textColor="@color/lightGray"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREE"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Returns"
                        android:textSize="14sp"
                        android:textColor="@color/lightGray"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FREE FOR 30 DAYS*"
                        android:textSize="14sp"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$204.95"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Email Address (If logged in user)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_color" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Your email address"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:textColor="@color/widget_text_color"
                android:background="@drawable/shape_edit_text_background" />

            <RelativeLayout
                android:id="@+id/rl_place_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="30dp"
                android:background="@color/button_background_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="20dp"
                    android:text="PLACE YOUR ORDER\n(You will receive 1 parcel)"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>